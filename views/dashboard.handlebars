<section class="row">
  <div class="column">
    <h2>Create New Article</h2>

    <form class="new-article-form">
      <div class="article-title">
        <label for="article-title">Title</label>
        <input type="text" id="article-title" name="article-title" />
      </div>
      <div class="article-body">
        <label for="article-body">Text</label>
        <textarea id="article-body" name="article-body"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
</section>

{{#if articles.length}}
<section>
  <h2>Your Articles</h2>
  <ol>
    {{#each articles as |article|}}
    <li>
      {{> articleInfo article}}
      <a href="/dashboard/edit/{{article.id}}" class="edit-link">Edit article</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/add-article.js"></script>